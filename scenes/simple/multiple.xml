<world> 
    <window width="512" height="512" /> 
    <camera> 
        <position x="3" y="3" z="3" /> 
        <lookAt x="0" y="0" z="0" /> <!-- gluLookAt center-->
        <up x="0" y="1" z="0" /> <!-- gluLookAt up-->
        <projection fov="60" near="1" far="1000" /> <!--gluPerspective-->
    </camera>
    <group> 
          <models> 
            <model file="models/simple/plane.3d" />
            <model file="models/simple/cone.3d" />
            <model file="models/simple/torus.3d" />
            <model file="models/simple/sphere.3d" />
            <model file="models/simple/cylinder.3d" />
            <model file="models/simple/box.3d" />
         </models>
     </group>
</world>